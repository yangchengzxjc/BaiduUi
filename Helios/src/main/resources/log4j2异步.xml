<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <!--定义变量-->
        <Property name="LOG_HOME">logs</Property>
        <property name="PATTERN">%d{MM-dd HH:mm:ss.SSS}[%t][%X{logid}-%X{CaseName}]%M.%L %-5level-%m%n</property>
    </Properties>

    <Appenders>
        <!--控制台输出-->
        <Console name="STDOUT">
            <PatternLayout pattern="${PATTERN}"/>
        </Console>
        <!--入文件-->
        <RollingRandomAccessFile name="RollingFile" fileName="${LOG_HOME}/log.log"
                     filePattern="${LOG_HOME}/$${date:yyyy-MM}/%d{yyyy-MM-dd}-log-%i.log">
            <PatternLayout pattern="${PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <!--自动删除超过120天的日志压缩文件-->
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="2">
                    <IfFileName glob="*.log"/>
                    <IfLastModified age="120d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <!--采用异步输出日志-->
        <AsyncLogger name="com.xwtec.util.Transport" level="info"  additivity="false">
            <!--写入info级别-->
            <AppenderRef ref="RollingFile" level="info"/>
            <AppenderRef ref="STDOUT" level="info"/>
        </AsyncLogger>
        <AsyncRoot level="info">
            <AppenderRef ref="RollingFile" level="info"/>
            <AppenderRef ref="STDOUT" level="info"/>
        </AsyncRoot>
        <AsyncLogger name="com.jayway.jsonpath.JsonPath" level="Error">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="RollingFile"/>
        </AsyncLogger>
    </Loggers>
</Configuration>