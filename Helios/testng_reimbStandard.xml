<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="artemis expense control" parallel="tests" thread-count="1">

    <parameter name="environment" value="${environment}"/>
    <parameter name="phoneNumber" value="${phoneNumber}"/>
    <parameter name="module" value="${module}"/>
    <parameter name="passWord" value="${passWord}"/>

    <test verbose="10" preserve-order="true" name="报销标准汇总管控测试">
        <classes>
            <class name="com.test.api.testcase.expenseControl.RemimbStandard.SummaryControlTest"/>
        </classes>
    </test>

    <test verbose="10" preserve-order= "true" name="报销单提交管控测试">
        <classes>
            <class name="com.test.api.testcase.expenseControl.SubmissionControl.ReimbSubmissionControlTest"/>
        </classes>
    </test>

    <test verbose="10" preserve-order="true" name="报销标准周期测试">
        <classes>
            <class name="com.test.api.testcase.expenseControl.RemimbStandard.PeriodControlTest"/>
            <class name="com.test.api.testcase.expenseControl.RemimbStandard.SingleControlTest"/>
        </classes>
    </test>

    <test verbose="10" preserve-order="true" name="非金额报销标准">
        <classes>
            <class name="com.test.api.testcase.expenseControl.RemimbStandard.NoAmountControlTest"/>
        </classes>
    </test>

    <listeners>
        <listener class-name="com.test.listener.TestLogListener"/>
        <listener class-name="com.test.listener.TestReportListener"/>
    </listeners>
</suite>

